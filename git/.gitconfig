[alias]
  st = status
[color]
  ui = true
[user]
	name = dcharrier
	email = dcharrier@spotify.com
[core]
  excludesfile = ~/.gitignore_global
[web]
  browser = chrome
[mergetool]
  keepTemporaries = false
[merge]
  tool = meld
[mergetool]
  prompt = false
[mergetool "meld"]
  trustExitCode = true
  cmd = open -W -a Meld --args \"$([[ "$LOCAL" == /* ]] && echo "$LOCAL" || echo "$PWD/$LOCAL")\"  \"$([[ "$BASE" == /* ]] && echo "$BASE" || echo "$PWD/$BASE")\" \"$([[ "$REMOTE" == /* ]] && echo "$REMOTE" || echo "$PWD/$REMOTE")\"
[pull]
  ff = true
  rebase = false
